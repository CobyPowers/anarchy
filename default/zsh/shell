ZSH=~/.local/share/anarchy/default/zsh/ohmyzsh
ZSH_CUSTOM=~/.local/share/anarchy/default/zsh
ZSH_THEME='powerlevel10k/powerlevel10k'

plugins=(
    git \
    docker \
    docker-compose \
    extract \
    universalarchive \
    web-search \
    colored-man-pages \
    zsh-autosuggestions \
    zsh-syntax-highlighting
)

zstyle ':omz:update' mod auto
zstyle ':omz:update' frequency 7
zstyle ':omz:update' verbosity silent

COMPLETION_WAITING_DOTS=true
ENABLE_CORRECTION=true
HIST_STAMPS="mm/dd/yyyy"

# Create a place to store user-specific scripts
if [ -d ~/.zsh-scripts ]; then
  for sh in ~/.zsh-scripts/*.sh; do
    source "$sh"
  done
else
  mkdir ~/.zsh-scripts
fi

source $ZSH/oh-my-zsh.sh
