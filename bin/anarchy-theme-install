#!/bin/bash

# anarchy-theme-install: Install a new theme from a git repo for Anarchy
# Usage: anarchy-theme-install <git-repo-url>

if [ -z "$1" ]; then
  echo "Usage: anarchy-theme-install <git-repo-url>"
  exit 1
fi

REPO_URL="$1"
THEMES_DIR="$HOME/.config/anarchy/themes"
THEME_NAME=$(basename "$REPO_URL" .git | sed -E 's/^anarchy-//; s/-theme$//')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Remove existing theme if present
if [ -d "$THEME_PATH" ]; then
  rm -rf "$THEME_PATH"
fi

# Clone the repo directly to ~/.config/anarchy/themes
if ! git clone "$REPO_URL" "$THEME_PATH"; then
  echo "Error: Failed to clone theme repo."
  exit 1
fi

# Apply the new theme with anarchy-theme-set
anarchy-theme-set $THEME_NAME
