#!/bin/bash

ANARCHY_VERSION=$(git -C ~/.local/share/anarchy describe --tags --abbrev=0 2>/dev/null)
PATH="$PATH:$HOME/.local/share/anarchy/bin"

show_ascii_art() {
  clear
  tte -i ~/.local/share/anarchy/logo.txt --frame-rate 640 --no-color expand
  echo "                                                                          $ANARCHY_VERSION"
}

main_menu() {
  show_ascii_art

  local options=("Theme" "Font" "Setup" "Update" "Exit")
  choice=$(printf "%s\n" "${options[@]}" | gum choose --header "") || exit 0
  case "$choice" in
  Theme) theme_menu ;;
  Font)
    anarchy-font-menu
    ack_command
    main_menu
    ;;
  Update)
    anarchy-update
    main_menu
    ;;
  Setup) setup_menu ;;
  Exit) clear && exit 0 ;;
  esac
}

theme_menu() {
  show_ascii_art

  local options=("Pick" "Install" "Update" "Remove" "Back")
  local commands=(
    "anarchy-theme-menu"
    "install_theme_prompt"
    "anarchy-theme-update"
    "remove_theme_prompt"
    "main_menu"
  )
  local choice
  choice=$(printf "%s\n" "${options[@]}" | gum choose --header="Theme") || main_menu
  for i in "${!options[@]}"; do
    if [[ "${options[$i]}" == "$choice" ]]; then
      if [[ "$choice" == "Back" ]]; then
        main_menu
      else
        eval "${commands[$i]}"
        ack_command
        main_menu
      fi
      break
    fi
  done
}

install_theme_prompt() {
  local url=$(gum input --placeholder="Git repo URL for theme" --header="")
  if [[ -n "$url" ]]; then
    anarchy-theme-install "$url"
  fi

  theme_menu
}

remove_theme_prompt() {
  local theme=$(gum input --placeholder="Theme name" --header="")
  if [[ -n "$theme" ]]; then
    anarchy-theme-remove "$theme"
  fi

  theme_menu
}

setup_menu() {
  show_ascii_art
  local options=("Steam" "Docker DBs" "Fingerprint Sensor" "Fido2 Device" "Back")
  local commands=(
    "anarchy-setup-steam"
    "setup_docker_dbs"
    "anarchy-setup-fingerprint"
    "anarchy-setup-fido2"
    "main_menu"
  )
  local choice
  choice=$(printf "%s\n" "${options[@]}" | gum choose --header="Setup") || main_menu
  for i in "${!options[@]}"; do
    if [[ "${options[$i]}" == "$choice" ]]; then
      if [[ "$choice" == "Back" ]]; then
        main_menu
      else
        eval "${commands[$i]}"
        ack_command
        main_menu
      fi
      break
    fi
  done
}

setup_docker_dbs() {
  local options=("MariaDB" "MySQL" "Redis" "PostgreSQL")
  local choices=$(printf "%s\n" "${options[@]}" | gum choose --no-limit --header "Select databases (space to select, return to install, esc to cancel)") || main_menu

  if [[ -n "$choices" ]]; then
    for db in $choices; do
      case $db in
      MySQL) sudo docker run -d --restart unless-stopped -p "127.0.0.1:3306:3306" --name=mysql8 -e MYSQL_ROOT_PASSWORD= -e MYSQL_ALLOW_EMPTY_PASSWORD=true mysql:8.4 ;;
      PostgreSQL) sudo docker run -d --restart unless-stopped -p "127.0.0.1:5432:5432" --name=postgres16 -e POSTGRES_HOST_AUTH_METHOD=trust postgres:16 ;;
      MariaDB) sudo docker run -d --restart unless-stopped -p "127.0.0.1:3306:3306" --name=mariadb11 -e MARIADB_ROOT_PASSWORD= -e MARIADB_ALLOW_EMPTY_ROOT_PASSWORD=true mariadb:11.8 ;;
      Redis) sudo docker run -d --restart unless-stopped -p "127.0.0.1:6379:6379" --name=redis redis:7 ;;
      esac
    done
  fi

  main_menu
}

ack_command() {
  gum spin --spinner "globe" --title "Done!" -- sleep 1
}

main_menu
