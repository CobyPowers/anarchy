#!/bin/bash

anarchy_path="$HOME/.local/share/anarchy"
latest_tag=$(git -C $anarchy_path ls-remote --tags origin | grep -v "{}" | awk '{print $2}' | sed 's#refs/tags/##' | sort -V | tail -n 1)
current_tag=$(git -C $anarchy_path describe --tags $(git -C $anarchy_path rev-list --tags --max-count=1))

if [[ "$current_tag" != "$latest_tag" ]]; then
  echo "Anarchy update available ($latest_tag)"
  exit 0
else
  echo "Anarchy is up to date ($current_tag)"
  exit 1
fi
